<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dip" 
    android:paddingTop="10dip"
    android:paddingLeft="10dip"
    android:paddingBottom="10dip"
    android:background="@drawable/challenge_gradient"
    >

   <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/badge"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:adjustViewBounds="true"
	android:src="@drawable/broccoli"
	/>
	
	
	
	 <!-- 98dip -->
	 
	  <TextView
        android:id="@+id/challenge_name_label"
        android:layout_width="225dip"
        android:layout_height="wrap_content"
        android:text="Quit Diet Soda"
        android:textColor="#0F63BD"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:layout_alignTop="@id/badge"
		android:layout_toRightOf="@id/badge"
		android:layout_marginLeft="8dip"
		 android:paddingTop="5dip"
		android:paddingRight="8dip"
		android:lines="1"
 		>
    </TextView>
    
     <TextView
        android:id="@+id/challenge_desc_label"
        android:lineSpacingMultiplier="1.3"
        android:layout_width="225dip"
        android:layout_height="60dip"
        android:text="Replace all soda with tea, water or coffee (unsweetened)"
        android:textColor="#7D7D7D"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        	android:layout_below="@id/challenge_name_label"
		android:layout_marginTop="9dip"
		android:paddingRight="8dip"
		 android:layout_alignLeft="@id/challenge_name_label"
 		>
    </TextView>
    
    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/red_star"
	android:layout_below="@id/challenge_desc_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:adjustViewBounds="true"
	android:layout_marginTop="8dip"
	android:layout_alignLeft="@id/challenge_name_label"
	android:src="@drawable/red_star"
	/>
	
	     <TextView
        android:id="@+id/challenge_points_label"
        android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        android:text="500 points"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        	android:layout_toRightOf="@id/red_star"
        	android:layout_marginRight="5dip"
        	android:layout_alignTop="@id/red_star"
        	android:paddingTop="3dip"
        	android:paddingLeft="3dip"
 		>
    </TextView>
    
